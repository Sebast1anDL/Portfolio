<section id="sobre-mi" class="py-20 bg-gray-50">
  <div class="max-w-4xl mx-auto px-6">
    <h2 class="text-3xl font-bold text-center mb-12">Sobre mí</h2>
    
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <!-- Columna izquierda - Foto/Avatar -->
      <div class="text-center">
        <div class="w-64 h-64 mx-auto rounded-full overflow-hidden mb-6 shadow-lg">
          <img src="/Foto3.jpg" alt="Foto de perfil" class="w-full h-full object-cover" />
        </div>
        
        <!-- Enlaces sociales y CV -->
        <div class="flex justify-center gap-4 mb-6">
          <a href="https://github.com/Sebast1anDL" target="_blank" class="social-link">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
